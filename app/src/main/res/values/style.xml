    <!-- Full custom DatePickerDialog theme with black background and blue buttons -->
    <style name="BlackDatePickerDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="android:background">@color/dialog_background</item> <!-- Black background -->

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_color_80</item> <!-- White text -->
        <item name="android:textColorSecondary">@color/text_color_70</item> <!-- Light gray -->

        <!-- Button styles -->
        <item name="android:buttonBarPositiveButtonStyle">@style/BlueDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/BlueDialogButton</item>
    </style>

    <!-- Blue buttons -->
    <style name="BlueDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue</item> <!-- Blue -->
    </style>




