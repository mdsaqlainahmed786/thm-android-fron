<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bottom_sheet_background_large"
        tools:context=".bottomSheets.SharePostBottomSheetFragment">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">

            <View
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/bottom_sheet_handle" />

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comic_bold"
                android:gravity="center_horizontal"
                android:text="@string/share_post"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/shareExternallyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/background_share_option"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_14sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:paddingBottom="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_share_icon_white"
                    android:tint="@color/blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/comic_regular"
                    android:text="@string/share_outside_app"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_outline_next_arrow"
                    android:tint="@color/text_color_60" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareToStoryBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/background_share_option"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_14sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_share_icon_white"
                    android:tint="@color/blue" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/comic_regular"
                    android:text="@string/share_to_story"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_outline_next_arrow"
                    android:tint="@color/text_color_60" />
            </LinearLayout>

            <TextView
                android:id="@+id/sendDmLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/comic_regular"
                android:text="@string/send_via_dm"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/searchEt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/rounded_edit_text_background_selector"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableStart="@drawable/ic_search"
                android:hint="@string/search_chats_hint"
                android:inputType="text"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/loadingIndicator"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/emptyStateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/comic_regular"
                android:gravity="center_horizontal"
                android:text="@string/share_no_conversations"
                android:textColor="@color/text_color_60"
                android:textSize="14sp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatListRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/chat_list_items_layout" />

        </LinearLayout>

    </FrameLayout>
</layout>

