<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bottom_sheet_background_small"
        tools:context=".bottomSheets.EditMessageBottomSheetFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/titleTv"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Edit Message"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:fontFamily="@font/comic_regular"/>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color_40"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"/>

            <EditText
                android:id="@+id/messageEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_background_selector"
                android:padding="12dp"
                android:minLines="3"
                android:gravity="top|start"
                android:hint="Type your message..."
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_60"
                android:fontFamily="@font/comic_regular" 
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="end">

                <TextView
                    android:id="@+id/cancelBtn"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textColor="@color/text_color_60"
                    android:fontFamily="@font/comic_regular"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_edit_text_background_normal"/>

                <View
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="2dp"/>
                
                <TextView
                    android:id="@+id/saveBtn"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/comic_regular"
                    android:textSize="14sp"
                    android:background="@drawable/blue_btn_background_background"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
