<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/post_background"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/transparent">

            <LinearLayout
                android:layout_margin="3dp"
                android:padding="5dp"
                android:id="@+id/chatLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_chat"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_gravity="center"
                        android:id="@+id/profileIv"
                        android:layout_margin="3.6dp"
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:background="@color/grey"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/nameTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginEnd="@dimen/_26sdp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/comic_regular"
                            android:text="Sakshi Reddy"/>


                        <LinearLayout
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:id="@+id/userNameTv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/text_color_40"
                                android:fontFamily="@font/comic_regular"
                                android:text="sakshi_reddy43"/>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/businessLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:strokeColor="@color/business_stroke"
                                app:strokeWidth="0.75dp"
                                app:cardBackgroundColor="@color/business_background">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/businessTypeIv"
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_bio_icon" />


                                    <TextView
                                        android:id="@+id/businessTypeTv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/_2sdp"
                                        android:fontFamily="@font/comic_regular"
                                        android:text="sakshi_reddy43"
                                        android:textColor="@color/text_color_40"
                                        android:textSize="10sp" />

                                </androidx.appcompat.widget.LinearLayoutCompat>


                            </com.google.android.material.card.MaterialCardView>




                        </LinearLayout>


                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/selectedBTnBtn"
                android:layout_margin="7dp"
                android:layout_gravity="end"
                app:strokeColor="@color/transparent"
                app:cardBackgroundColor="@color/background_color"
                app:cardCornerRadius="@dimen/_50sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tick"
                    android:visibility="gone"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_tick_white"/>


            </com.google.android.material.card.MaterialCardView>


        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>