<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        tools:context=".fragments.userTypes.business.BusinessInsightFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home_logo"/>
                </LinearLayout>

<!--                <androidx.appcompat.widget.AppCompatImageView-->
<!--                    android:id="@+id/notificationBtn"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:src="@drawable/ic_notification" />-->


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/notificationBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notification"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/redDotView"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:background="@color/red"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_26sdp"
                            app:cardBackgroundColor="@color/et_background"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:strokeColor="@color/et_stroke" >


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="10dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/timingTv"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_color_60"
                                    android:fontFamily="@font/comic_regular"
                                    android:text="@string/engaged"/>

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_small_dropdown" />

                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/filterBtn"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_26sdp"
                            app:cardBackgroundColor="@color/et_background"
                            app:cardCornerRadius="@dimen/_26sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:strokeColor="@color/et_stroke" >


                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/menu_arrows"
                                android:layout_gravity="center"/>



                        </com.google.android.material.card.MaterialCardView>





                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_margin="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/profile_background"
                        app:strokeColor="@color/transparent">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/dynamicDateRv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/selected_weeks_timing_item"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


                        </androidx.appcompat.widget.LinearLayoutCompat>



                    </com.google.android.material.card.MaterialCardView>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">



                        <com.google.android.material.card.MaterialCardView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/post_background"
                            app:cardCornerRadius="14dp"
                            app:strokeColor="@color/transparent">

                            <LinearLayout
                                android:layout_margin="3dp"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_accout_reached"
                                android:orientation="vertical">

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_gravity="center"
                                        
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <TextView
                                            android:layout_marginTop="4dp"
                                            android:id="@+id/accountReachedTv"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="14sp"
                                            android:layout_marginEnd="@dimen/_26sdp"
                                            android:textColor="@color/text_color"
                                            android:fontFamily="@font/comic_regular"
                                            android:text="00"/>

                                        <TextView
                                            android:layout_marginTop="6dp"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="10sp"
                                            android:textColor="@color/text_color_60"
                                            android:fontFamily="@font/comic_regular"
                                            android:text="@string/account_reached"/>



                                    </androidx.appcompat.widget.LinearLayoutCompat>


                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_margin="5dp"
                                android:layout_gravity="end"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_account_reached"/>




                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"/>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/post_background"
                            app:cardCornerRadius="14dp"
                            app:strokeColor="@color/transparent">

                            <LinearLayout
                                android:layout_margin="3dp"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_accout_reached"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_gravity="center"
                                    
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_marginTop="4dp"
                                        android:id="@+id/totalFollowerTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_marginEnd="@dimen/_26sdp"
                                        android:textColor="@color/text_color"
                                        android:fontFamily="@font/comic_regular"
                                        android:text="00"/>

                                    <TextView
                                        android:layout_marginTop="6dp"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="10sp"
                                        android:textColor="@color/text_color_60"
                                        android:fontFamily="@font/comic_regular"
                                        android:text="@string/total_followers"/>



                                </androidx.appcompat.widget.LinearLayoutCompat>


                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_margin="5dp"
                                android:layout_gravity="end"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_total_followers"/>




                        </com.google.android.material.card.MaterialCardView>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">




                        <com.google.android.material.card.MaterialCardView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/post_background"
                            app:cardCornerRadius="14dp"
                            app:strokeColor="@color/transparent">

                            <LinearLayout
                                android:layout_margin="3dp"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_accout_reached"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_marginTop="4dp"
                                        android:id="@+id/engagedTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_marginEnd="@dimen/_26sdp"
                                        android:textColor="@color/text_color"
                                        android:fontFamily="@font/comic_regular"
                                        android:text="00"/>

                                    <TextView
                                        android:layout_marginTop="6dp"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="10sp"
                                        android:textColor="@color/text_color_60"
                                        android:fontFamily="@font/comic_regular"
                                        android:text="@string/engaged"/>



                                </androidx.appcompat.widget.LinearLayoutCompat>


                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_margin="5dp"
                                android:layout_gravity="end"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_engaged"/>




                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"/>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/post_background"
                            app:cardCornerRadius="14dp"
                            app:strokeColor="@color/transparent">

                            <LinearLayout
                                android:layout_margin="3dp"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_accout_reached"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_gravity="center"
                                    
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_marginTop="4dp"
                                        android:id="@+id/websiteRedirectionTv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_marginEnd="@dimen/_26sdp"
                                        android:textColor="@color/text_color"
                                        android:fontFamily="@font/comic_regular"
                                        android:text="00"/>

                                    <TextView
                                        android:layout_marginTop="6dp"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="10sp"
                                        android:textColor="@color/text_color_60"
                                        android:fontFamily="@font/comic_regular"
                                        android:text="@string/website_redirection"/>



                                </androidx.appcompat.widget.LinearLayoutCompat>


                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_margin="5dp"
                                android:layout_gravity="end"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/ic_website_redirection"/>




                        </com.google.android.material.card.MaterialCardView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overview"
                        android:textColor="@color/text_color_60"
                        android:textSize="14sp"
                        android:fontFamily="@font/comic_regular"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/faded_round_btn"
                        app:cardCornerRadius="14dp"
                        app:strokeColor="@color/transparent">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/background_color"
                        app:cardCornerRadius="14dp"
                        app:strokeColor="@color/transparent">
                        <com.github.mikephil.charting.charts.LineChart
                            android:layout_margin="6dp"
                            android:id="@+id/lineChart"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp" />
                    </com.google.android.material.card.MaterialCardView>


                    </com.google.android.material.card.MaterialCardView>



                    <TextView
                        android:id="@+id/contentSharedTv"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/content_you_shared"
                        android:textColor="@color/text_color_60"
                        android:textSize="14sp"
                        android:fontFamily="@font/comic_regular"/>
                    <TextView
                        android:id="@+id/storiesTv"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stories"
                        android:textColor="@color/text_color_60"
                        android:textSize="14sp"
                        android:fontFamily="@font/comic_regular"/>




                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="8dp"
                        android:id="@+id/storiesRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/insight_media_item"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


                    <TextView
                        android:id="@+id/postsTv"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/posts"
                        android:textColor="@color/text_color_60"
                        android:textSize="14sp"
                        android:fontFamily="@font/comic_regular"/>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/postsRv"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/insight_media_item"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


                    <include layout="@layout/view_spacer"/>




                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.core.widget.NestedScrollView>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </FrameLayout>


</layout>