<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/background_color">




        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/mediaViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:importantForAccessibility="yes"
            app:layout_constraintBottom_toTopOf="@id/photoFooterContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photoHeaderContainer" />

        <!-- Reels overlay -->
        <View
            android:id="@+id/reelTopGradient"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_reels_top"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/reelBottomGradient"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/gradient_reels_bottom"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/reelActionColumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6">

            <LinearLayout
                android:id="@+id/reelLikeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/reelLikeIv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_unlike_icon_white" />

                <TextView
                    android:id="@+id/reelLikeCountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/comic_regular"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reelCommentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/reelCommentIv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_comment_icon_white" />

                <TextView
                    android:id="@+id/reelCommentCountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/comic_regular"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reelShareBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/reelShareIv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_share_icon_white" />

                <TextView
                    android:id="@+id/reelShareCountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/comic_regular"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reelSaveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/reelSaveIv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_unsave_icon"
                    android:tint="@color/white" />
            </LinearLayout>

            <ImageView
                android:id="@+id/reelMenuBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_three_dot_blue"
                android:contentDescription="Menu"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reelInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="28dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/reelActionColumn"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reelProfileRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/reelProfileIv"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile_placeholder"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                <LinearLayout
                    android:id="@+id/reelProfileInfoContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/reelProfileIv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/reelProfileIv"
                    app:layout_constraintTop_toTopOf="@id/reelProfileIv">

                    <LinearLayout
                        android:id="@+id/reelNameRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/reelUsernameTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/comic_regular"
                            android:maxLines="1"
                            android:text="username"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/reelFollowButton"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_marginStart="6dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:background="@drawable/bg_follow_outline_dark"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/follow"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:backgroundTint="@android:color/transparent"
                            app:rippleColor="@color/white_40" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/reelSubtitleTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/comic_regular"
                        android:maxLines="1"
                        android:text="Location"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/reelCaptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/comic_regular"
                android:maxLines="3"
                android:text="Caption goes here"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/reelViewCommentsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/comic_regular"
                android:text="View all 0 comments"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/reelTimestampTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/comic_regular"
                android:text="0 DAYS AGO"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Photo overlay -->
        <LinearLayout
            android:id="@+id/photoHeaderContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B3000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:clickable="false"
            android:focusable="false"
            android:descendantFocusability="blocksDescendants"
            android:elevation="15dp"
            app:layout_constraintBottom_toTopOf="@id/mediaViewPager"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photoProfileIv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_placeholder"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/photoUsernameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic_regular"
                    android:text="username"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/photoSubtitleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic_regular"
                    android:text="Location â€¢ time"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/photoMenuBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_three_dot_blue"
                android:contentDescription="Menu"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:elevation="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/photoFooterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B3000000"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/mediaViewPager"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/photoActionRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/photoLikeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:id="@+id/photoLikeIv"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_unlike_icon_white" />

                    <TextView
                        android:id="@+id/photoLikeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/comic_regular"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/photoCommentBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:id="@+id/photoCommentIv"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_comment_icon_white" />

                    <TextView
                        android:id="@+id/photoCommentTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/comic_regular"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/photoShareBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:id="@+id/photoShareIv"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_share_icon_white" />

                    <TextView
                        android:id="@+id/photoShareTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/comic_regular"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/photoSaveIv"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_unsave_icon"
                    android:tint="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/photoLikeCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/comic_regular"
                android:text="0 likes"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/photoCaptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:fontFamily="@font/comic_regular"
                android:maxLines="2"
                android:text="Caption text"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/photoViewCommentsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/comic_regular"
                android:text="View all 0 comments"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/photoTimestampTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/comic_regular"
                android:text="3 HOURS AGO"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

