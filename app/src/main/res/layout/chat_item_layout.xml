<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/dateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_4sdp">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/text_color_40"/>

        <TextView
            android:id="@+id/dateTv"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:fontFamily="@font/comic_regular"
            android:textSize="11sp"
            android:textColor="@color/text_color_40"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/text_color_40"/>


    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/storyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/replyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demafasd sgasdg sgasdgasd asgas o"
            android:fontFamily="@font/comic_regular"
            android:textColor="@color/white_70"
            android:textSize="11sp"
            android:maxWidth="@dimen/_240sdp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/storyIv"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize6Percent"/>

        <TextView
            android:id="@+id/storyAvailableTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo"
            android:fontFamily="@font/comic_regular"
            android:textColor="@color/white_70"
            android:textSize="11sp"
            android:maxWidth="@dimen/_240sdp" />
        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/_2sdp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>



    <!-- media Bubble -->
    <RelativeLayout
        android:id="@+id/mediaLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_receiver_background"
        android:orientation="vertical">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/chatMediaIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/_200sdp"
            android:maxWidth="@dimen/_240sdp"
            android:minHeight="@dimen/_100sdp"
            android:minWidth="@dimen/_100sdp"
            android:padding="10dp"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize6Percent"/>

        <ImageView
            android:id="@+id/playIcon"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_play_videos"/>

    </RelativeLayout>
    <!-- PDF Bubble -->
    <RelativeLayout
        android:id="@+id/pdfLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_receiver_background"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_70sdp"
            android:padding="10dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/chatPdfIv"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_pdf_icon"
                app:layout_constraintBottom_toTopOf="@+id/pdfNameTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize6Percent" />

            <TextView
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:id="@+id/pdfNameTv"
                android:layout_width="0dp"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comic_regular"
                android:text="PDF Name"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/white_70"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chatPdfIv" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>



    <!-- Message Bubble -->
    <RelativeLayout
        android:id="@+id/messageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_receiver_background"
        android:orientation="vertical">
        <TextView
            android:textIsSelectable="false"
            android:id="@+id/chatMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Demo"
            android:fontFamily="@font/comic_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:maxWidth="@dimen/_240sdp" />

        <TextView
            android:id="@+id/deletedMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="This message was deleted"
            android:fontFamily="@font/comic_regular"
            android:textColor="@color/white_70"
            android:textSize="14sp"
            android:maxWidth="@dimen/_240sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/editedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chatMessageText"
            android:layout_alignStart="@id/chatMessageText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="Edited"
            android:fontFamily="@font/comic_regular"
            android:textColor="@color/white_70"
            android:textSize="10sp"
            android:visibility="gone" />









    </RelativeLayout>

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="demo"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/comic_regular"
        android:textColor="@color/text_color"
        android:textSize="11sp"
        android:maxWidth="@dimen/_240sdp" />

</LinearLayout>