<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:keepScreenOn="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/topGradient"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_camera_top_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/bottomGradient"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@drawable/bg_camera_bottom_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close"
            android:padding="8dp"
            android:src="@drawable/ic_camera_close"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/comic_regular"
            android:gravity="center"
            android:text="@string/camera_title_story"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/flashButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/camera_flash_toggle"
            android:padding="8dp"
            android:src="@drawable/ic_camera_flash"
            android:tint="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightToolBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/timerButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_camera_toolbar_button"
            android:contentDescription="@string/camera_timer"
            android:padding="10dp"
            android:src="@drawable/ic_camera_timer"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_camera_toolbar_button"
            android:contentDescription="@string/camera_filter"
            android:padding="10dp"
            android:src="@drawable/ic_camera_magic"
            android:tint="@android:color/white" />

    </LinearLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/recordingProgress"
        style="@style/Widget.MaterialComponents.LinearProgressIndicator"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:indeterminate="false"
        android:progress="0"
        android:visibility="gone"
        app:indicatorColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/recordingTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/comic_regular"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/recordingProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/modeSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/bg_camera_mode_container"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@id/captureButtonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/photoMode"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/comic_regular"
            android:gravity="center"
            android:text="@string/camera_mode_photo"
            android:textColor="@color/camera_mode_text_selector"
            android:textSize="14sp"
            android:background="@drawable/bg_camera_mode_selector" />

        <TextView
            android:id="@+id/videoMode"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/comic_regular"
            android:gravity="center"
            android:text="@string/camera_mode_video"
            android:textColor="@color/camera_mode_text_selector"
            android:textSize="14sp"
            android:background="@drawable/bg_camera_mode_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/captureButtonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/galleryButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/bg_camera_toolbar_button"
            android:contentDescription="@string/camera_open_gallery"
            android:padding="12dp"
            android:src="@drawable/ic_camera_gallery"
            android:tint="@android:color/white" />

        <FrameLayout
            android:id="@+id/captureButton"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@drawable/bg_camera_capture_outer">

            <View
                android:id="@+id/captureInnerCircle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_camera_capture_inner" />
        </FrameLayout>

        <ImageView
            android:id="@+id/switchCameraButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/bg_camera_toolbar_button"
            android:contentDescription="@string/camera_switch"
            android:padding="12dp"
            android:src="@drawable/ic_camera_switch"
            android:tint="@android:color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/actionHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
            android:fontFamily="@font/comic_regular"
        android:text="@string/camera_hint_photo"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/modeSwitcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

