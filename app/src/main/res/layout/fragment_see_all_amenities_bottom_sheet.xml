<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_top_corners"
        tools:context=".activity.booking.bottomSheet.SeeAllAmenitiesBottomSheetFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_margin="12dp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/blue_50"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amenities"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/comic_regular"
                android:textColor="@color/text_color"/>


            <View
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/text_color_25"
                android:layout_gravity="center"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/amenitiesParentRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:spanCount="2"
                tools:listitem="@layout/business_amenities_item_layout"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>





        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>
</layout>