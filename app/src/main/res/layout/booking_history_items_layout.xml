<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_blue_50_background">

            <LinearLayout
                android:layout_margin="1.5dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black_90_background"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_gravity="center"
                        android:id="@+id/profileIv"
                        android:layout_margin="3.6dp"
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:background="@color/grey"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/comic_regular"
                            android:text="Sakshi Reddy"/>

                        <TextView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:id="@+id/locationTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginEnd="12dp"
                            android:textColor="@color/text_color_40"
                            android:fontFamily="@font/comic_regular"
                            android:text="Hey, I saw your review on the Grand Hotel. Can you tell me more about the breakfast options there?"/>



                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <ImageView
                        android:id="@+id/menuBtn"
                        android:layout_gravity="end"
                        app:strokeColor="@color/transparent"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_menu_horizontal_blue"/>



                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:background="@drawable/background_6">


                    <TextView
                        android:id="@+id/roomTypeTv"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/comic_regular"
                        android:text="1 * Deluxe Room"/>

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_color_50"/>
                    <TextView
                        android:id="@+id/nightsTv"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/comic_regular"
                        android:text="1 * Nights"/>

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_color_50"/>

                    <TextView
                        android:id="@+id/priceTv"
                        android:gravity="end"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:layout_weight="1"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/comic_regular"
                        android:text="â‚¹4,460"/>





                </androidx.appcompat.widget.LinearLayoutCompat>



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/bookingTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:maxLines="2"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:layout_marginEnd="12dp"
                        android:textColor="@color/text_color_40"
                        android:fontFamily="@font/comic_regular"
                        android:text="Booked on 1 Feb 2025, 11:30PM"/>




                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/bookingCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/red"
                        app:strokeColor="@color/transparent">

                        <TextView
                            android:id="@+id/bookingStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:fontFamily="@font/comic_regular"
                            android:text="Pending"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </com.google.android.material.card.MaterialCardView>





                </androidx.appcompat.widget.LinearLayoutCompat>


            </LinearLayout>




    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>