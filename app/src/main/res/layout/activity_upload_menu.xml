<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical"
        tools:context=".activity.userTypes.individual.UploadMenuActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backBtn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_menu"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:fontFamily="@font/comic_bold"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select menu images or PDF files to upload"
                    android:textColor="@color/text_color_60"
                    android:textSize="14sp"
                    android:fontFamily="@font/comic_regular"
                    android:layout_marginBottom="16dp"/>

                <!-- Existing menu items section -->
                <TextView
                    android:id="@+id/existingMenuTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Existing Menu Items"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:fontFamily="@font/comic_bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/existingMenuRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectFilesBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Files"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/blue"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="12dp"/>

                <TextView
                    android:id="@+id/selectedFilesTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 file(s) selected"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:fontFamily="@font/comic_regular"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"/>

                <!-- Local preview of selected images / PDFs -->
                <LinearLayout
                    android:id="@+id/previewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/uploadBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Menu"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/blue"
                    android:enabled="false"
                    app:cornerRadius="12dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>



