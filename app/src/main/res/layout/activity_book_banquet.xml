<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_color"
        tools:context=".activity.booking.BookBanquetActivity">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/linearLayoutCompat7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/backBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_back_arrow" />

                    <TextView
                        android:id="@+id/titleTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/comic_bold"
                        android:text="@string/book_a_banquet"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/booking_rounded_bg"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/hotelCv"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="@dimen/_50sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="@color/post_stroke"
                        app:strokeWidth="1.6dp">


                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/hotelProfileIv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3.6dp"
                            android:background="@color/grey"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/hotelNameTv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/comic_regular"
                                android:text="Grand Imperial"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/businessTypeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comic_regular"
                                android:text="Hotel -"
                                android:textColor="@color/white_40"
                                android:textSize="11sp" />

                            <ImageView
                                android:id="@+id/businessIconIv"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="4dp"
                                android:scaleType="center"
                                android:src="@drawable/ic_hotel" />

                            <TextView
                                android:id="@+id/averageRatingTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comic_regular"
                                android:text="( 3 star)"
                                android:textColor="@color/white_40"
                                android:textSize="11sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <TextView
                            android:id="@+id/addressTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/comic_regular"
                            android:maxLines="3"
                            android:text="Landran, Kharar - Landran Rd, Sector 116, Sahibzada Ajit Singh Nagar, Punjab 140308"
                            android:textColor="@color/white_80"
                            android:textSize="11sp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/comic_regular"
                    android:text="@string/type_of_event"
                    android:textColor="@color/text_color_80"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/featuresRv"
                    android:background="@drawable/rounded_edit_text_background_normal_14"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/features_items_layout" />



                <androidx.appcompat.widget.AppCompatEditText
                    android:visibility="gone"
                    android:id="@+id/otherOccasionEt"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:inputType="textCapWords"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/rounded_edit_text_background_selector"
                    android:drawablePadding="@dimen/_2sdp"
                    android:hint="@string/other_occasion"
                    android:paddingStart="12dp"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="14sp" />




                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comic_regular"
                            android:text="@string/check_in_"
                            android:textColor="@color/text_color_80"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/checkInBtn"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/rounded_edit_text_background_selector"
                            android:drawablePadding="@dimen/_6sdp"
                            android:drawableStart="@drawable/ic_date_icon"
                            android:paddingStart="12dp"
                            android:hint="@string/from"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp"
                            android:gravity="center_vertical|start" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <View
                        android:layout_width="10dp"
                        android:layout_height="12dp"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comic_regular"
                            android:text="@string/check_out"
                            android:textColor="@color/text_color_80"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/checkOutBtn"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/rounded_edit_text_background_selector"
                            android:drawablePadding="@dimen/_6sdp"
                            android:drawableStart="@drawable/ic_date_icon"
                            android:paddingStart="12dp"
                            android:hint="@string/to"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp"
                            android:gravity="center_vertical|start" />


                    </androidx.appcompat.widget.LinearLayoutCompat>



                </androidx.appcompat.widget.LinearLayoutCompat>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/comic_regular"
                    android:text="@string/number_of_guests"
                    android:textColor="@color/text_color_80"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_edit_text_background_selector"
                    android:layout_height="50dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputCategory"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:endIconDrawable="@drawable/toggle_dropdown"
                        app:boxStrokeWidthFocused="0dp"
                        app:endIconTint="@color/grey">

                        <AutoCompleteTextView
                            android:id="@+id/noOfGuestTv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:fontFamily="@font/comic_regular"
                            android:inputType="none"
                            android:background="@color/transparent"
                            android:padding="@dimen/_6sdp"
                            android:text="@string/no_of_guests"
                            android:textColor="@color/text_color_50"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.core.widget.NestedScrollView>


        <TextView
            android:id="@+id/submitBtn"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@drawable/rounded_edit_text_background_blue"
            android:fontFamily="@font/comic_regular"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/selected_text_color"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayoutCompat7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>