<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/onBoardingMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.onBoarding.OnBoardingActivity">

<!--        <ImageView-->
<!--            android:elevation="@dimen/_5sdp"-->
<!--            android:id="@+id/icon"-->
<!--            android:layout_width="120dp"-->
<!--            android:layout_height="120dp"-->
<!--            android:src="@drawable/ic_app_logo"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"/>-->

        <TextView
            android:elevation="@dimen/_5sdp"
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comic_regular"
            android:text="@string/skip"
            android:textColor="@color/white_70"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <androidx.viewpager.widget.ViewPager
            android:id="@+id/onboard_vp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="@drawable/gradient_background"
            android:elevation="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@+id/onboard_vp"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">
                <com.thehotelmedia.android.customClasses.NonSwipeableViewPager
                    android:id="@+id/text_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_54sdp"
                    android:layout_height="@dimen/_54sdp">
                    <ProgressBar
                        android:layout_centerInParent="true"
                        android:id="@+id/Prog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:indeterminateOnly="false"
                        android:progress="75"
                        android:progressDrawable="@drawable/circle"
                        tools:progress="1"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/btnNext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/round_btn_background"
                        android:layout_margin="@dimen/_12sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/next_arrow_blue"
                        app:contentPadding="@dimen/_9sdp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>

                </RelativeLayout>





                <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                    android:id="@+id/indicator_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dotsColor="@color/grey"
                    app:selectedDotColor="@color/blue"
                    app:dotsSize="@dimen/_8sdp"
                    app:dotsSpacing="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    app:layout_constraintBottom_toTopOf="@+id/card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>





        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>