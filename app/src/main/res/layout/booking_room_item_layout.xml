<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/et_background"
        app:cardCornerRadius="@dimen/_12sdp"
        app:strokeColor="@color/rooms_stroke"
        app:strokeWidth="1.5dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/coverIv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:src="@drawable/room_image"
                android:scaleType="fitXY"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:padding="1dp"
                    android:id="@+id/roomTypeIv"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                    android:src="@drawable/ic_deluxe_room"
                    app:contentPadding="@dimen/_5sdp"
                    app:strokeColor="@color/et_stroke"
                    app:strokeWidth="1dp"
                    android:layout_gravity="center"
                    android:background="@color/room_bg"/>

                <TextView
                    android:id="@+id/roomTypeTv"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Deluxe Room"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/comic_regular"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:id="@+id/roomPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹4500/"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/comic_regular"/>
                <TextView
                    android:id="@+id/roomTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Night"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_60"
                    android:fontFamily="@font/comic_regular"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <TextView
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/roomDescriptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This air-conditioned double room is comprised of a flat-screen TV with cable channels and a private bathroom."
                android:layout_gravity="center"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:justificationMode="inter_word"
                android:textColor="@color/text_color_80"
                android:fontFamily="@font/comic_regular"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                app:spanCount="2"
                tools:listitem="@layout/features_items_layout"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>



        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</layout>