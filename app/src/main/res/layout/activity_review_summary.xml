                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="@dimen/_6sdp"
                    android:id="@+id/promoCodeEtLayout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/rounded_edit_text_background_normal">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_weight="1"
                        android:id="@+id/promoCodeEt"
                        android:inputType="textCapCharacters"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/transparent"
                        android:drawablePadding="@dimen/_2sdp"
                        android:hint="@string/promo_code"
                        android:paddingStart="12dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color_60"
                        android:layout_marginEnd="12dp"
                        android:textSize="14sp" />



                    <TextView
                        android:id="@+id/applyPromoCodeBtn"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/apply"
                        android:fontFamily="@font/comic_bold"
                        android:textSize="16sp"
                        android:textColor="@color/blue"/>


                </androidx.appcompat.widget.LinearLayoutCompat>



                <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_bill_details"/>

                <TextView
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic_regular"
                    android:text="@string/bill_details"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />


            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_6sdp"
                android:padding="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_normal_14">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/planChargesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_charges"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                    <TextView
                        android:id="@+id/planChargesTv"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹900"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                </androidx.appcompat.widget.LinearLayoutCompat>


                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/including_applicable_taxes"
                    android:textColor="@color/text_color_60"
                    android:textSize="13sp"
                    android:fontFamily="@font/comic_regular"/>



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/promoCodeLayout"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/promo_code"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>

                    <TextView
                        android:id="@+id/promoCodeTv"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-10% (WELCOME10)"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/gstPriceLayout"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gstPercentageTv"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/gst"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                    <TextView
                        android:id="@+id/gstPriceTv"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹20"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dot_line"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/totalLayout"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/payable_amount"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                    <TextView
                        android:id="@+id/totalPriceTv"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹810"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="@string/the_price_includes_the_gst"-->
<!--                    android:textSize="11sp"-->
<!--                    android:gravity="end"-->
<!--                    android:textColor="@color/text_color_60"-->
<!--                    android:fontFamily="@font/comic_regular"/>-->

                <View
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_80sdp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="12dp"
            android:id="@+id/nextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline4">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/nextBtn"
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="@dimen/_50sdp"
                app:strokeColor="@color/blue"
                app:strokeWidth="@dimen/_3sdp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_6sdp"
                    android:background="@color/round_btn_background"
                    android:src="@drawable/next_arrow_blue"
                    app:contentPadding="@dimen/_9sdp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:background="@color/faded_round_btn"
                android:elevation="@dimen/_4sdp"
                android:src="@drawable/back_arrow_white"
                app:contentPadding="@dimen/_10sdp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />


        </RelativeLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="12dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="12dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="12dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>