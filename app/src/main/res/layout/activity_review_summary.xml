                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4JJYHG5613B4Z4"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_your_plan"/>

                <TextView
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic_regular"
                    android:text="@string/your_plan"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/rounded_edit_text_background_normal"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginStart="@dimen/_12sdp"
                    android:id="@+id/planIcon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_standard"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/planTv"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Premium"
                    android:textSize="14sp"
                    android:fontFamily="@font/comic_bold"
                    android:textColor="@color/text_color"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/planChargesTv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹900"
                        android:textSize="20sp"
                        android:fontFamily="@font/comic_regular"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/planTime"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text=" / Y"
                        android:height="@dimen/_16sdp"
                        android:textSize="12sp"
                        android:fontFamily="@font/comic_bold"
                        android:textColor="@color/text_color"/>
                </androidx.appcompat.widget.LinearLayoutCompat>



            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_12sdp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_promo_code"/>

                <TextView
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic_regular"
                    android:text="@string/promo_code"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />


            </androidx.appcompat.widget.LinearLayoutCompat>

