    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:foreground="@drawable/ic_background"
        tools:context=".activity.authentication.business.ReviewSummaryActivity">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/hasDataLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="@+id/guideline">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:src="@drawable/ic_app_logo" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:fontFamily="@font/comic_regular"
                android:text="@string/review_summery"
                android:textColor="@color/text_color"
                android:textSize="20sp" />



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_billing"/>

                <TextView
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic_regular"
                    android:text="@string/billing_address"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/_6sdp"
                android:padding="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_normal_14">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/nameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name_dots"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                    <TextView
                        android:id="@+id/nameTv"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Demo"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/addressLayout"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/address_dots"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                    <TextView
                        android:id="@+id/addressTv"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Landran, Kharar - Landran Rd, Sector 116, SAS Nagar"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/phoneLayout"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number_dots"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                    <TextView
                        android:id="@+id/phoneTv"
                        android:textAlignment="textEnd"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+918053386911"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/gstnLayout"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/gstn_dots"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"
                        android:fontFamily="@font/comic_regular"/>
                    <TextView
                        android:id="@+id/gstnTv"
