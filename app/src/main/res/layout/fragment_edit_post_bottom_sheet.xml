<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data/>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:cardBackgroundColor="@color/post_background"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:fontFamily="@font/comic_regular"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Content Editor -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:fontFamily="@font/comic_regular"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/contentEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:hint="What's on your mind?"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color_40"
                    android:maxLines="6"
                    android:background="@drawable/background_with_blue_stroke"
                    android:padding="12dp"
                    android:fontFamily="@font/comic_regular"
                    android:textSize="14sp"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"/>

                <!-- Feelings Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feeling"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:fontFamily="@font/comic_regular"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:id="@+id/feelingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/background_with_blue_stroke"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/feelingTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select feeling"
                        android:textColor="@color/text_color_40"
                        android:textSize="14sp"
                        android:fontFamily="@font/comic_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textColor="@color/text_color_40"
                        android:textSize="20sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/feelingRemoveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove feeling"
                    android:textColor="@color/text_color_40"
                    android:textSize="12sp"
                    android:fontFamily="@font/comic_regular"
                    android:layout_marginTop="6dp"
                    android:visibility="gone"
                    android:padding="4dp"/>

                <!-- Media Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:fontFamily="@font/comic_regular"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mediaRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:listitem="@layout/attached_media_item"
                    app:spanCount="3"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/addMediaBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Add Media"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:fontFamily="@font/comic_regular"
                        android:background="@drawable/background_with_blue_stroke"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/removeAllMediaBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove All"
                        android:textColor="@color/text_color_40"
                        android:textSize="14sp"
                        android:fontFamily="@font/comic_regular"
                        android:layout_marginStart="12dp"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cancelBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:textColor="@color/text_color_40"
                        android:fontFamily="@font/comic_regular"
                        android:padding="12dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:id="@+id/saveBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/save"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/comic_regular"
                        android:background="@drawable/background_with_blue_stroke"
                        android:padding="12dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:layout_marginStart="12dp"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>
</layout>
