                            <TextView
                                android:id="@+id/descriptionTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_14sdp"
                                android:fontFamily="@font/comic_regular"
                                android:text="@string/bio"
                                android:textColor="@color/text_color_60"
                                android:textSize="14sp"/>


                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/descriptionEt"
                                android:padding="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_120sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:background="@drawable/rounded_edit_text_background_selector"
                                android:inputType="textMultiLine|textCapSentences"
                                android:gravity="top|start"
                                android:drawablePadding="@dimen/_2sdp"
                                android:hint="@string/bio"
                                android:paddingStart="12dp"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/text_hint_color"
                                android:textSize="14sp" />





                            <RelativeLayout
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/nextBtn"
                                    android:layout_width="@dimen/_44sdp"
                                    android:layout_height="@dimen/_44sdp"
                                    android:layout_gravity="center"
                                    app:cardBackgroundColor="@color/transparent"
                                    android:layout_centerInParent="true"
                                    app:cardCornerRadius="@dimen/_50sdp"
                                    app:strokeColor="@color/blue"
                                    app:strokeWidth="@dimen/_3sdp">

                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                        android:layout_margin="@dimen/_6sdp"
                                        android:background="@color/round_btn_background"
                                        android:src="@drawable/next_arrow_blue"
                                        app:contentPadding="@dimen/_9sdp"
                                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                                </com.google.android.material.card.MaterialCardView>


                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/backBtn"
                                    android:layout_width="@dimen/_34sdp"
                                    android:layout_height="@dimen/_34sdp"
                                    android:layout_margin="@dimen/_6sdp"
                                    android:elevation="@dimen/_4sdp"
                                    android:background="@color/faded_round_btn"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/back_arrow_white"
                                    app:contentPadding="@dimen/_10sdp"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />


                            </RelativeLayout>


                        </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="12dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="12dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="12dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>