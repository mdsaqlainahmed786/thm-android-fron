<!--                                android:id="@+id/amenitiesTv"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_marginTop="@dimen/_14sdp"-->
<!--                                android:fontFamily="@font/comic_regular"-->
<!--                                android:text="@string/amenities"-->
