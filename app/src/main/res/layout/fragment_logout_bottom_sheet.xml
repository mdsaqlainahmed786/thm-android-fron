<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bottom_sheet_background_small"
        tools:context=".bottomSheets.LogoutBottomSheetFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/logout_text"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:fontFamily="@font/comic_regular"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color_40"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <TextView
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:id="@+id/yesBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/yes"
                    android:textColor="@color/text_color_60"
                    android:fontFamily="@font/comic_regular"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_edit_text_background_normal"/>

                <View
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="2dp"/>
                <TextView
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:id="@+id/noBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no"
                    android:textColor="@color/text_color_60"
                    android:fontFamily="@font/comic_regular"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_edit_text_background_normal"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</layout>