<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/setting_background_normal_14">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/checkBoxLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:padding="1dp"
                    android:id="@+id/checkboxMyself"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:drawableStart="@drawable/checkbox_selector"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/comic_regular"
                    android:text="@string/my_self"
                    android:textColor="@color/checkbox_text_color" />

                <CheckBox
                    android:padding="1dp"
                    android:id="@+id/checkboxSomeoneElse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:button="@android:color/transparent"
                    android:drawableStart="@drawable/checkbox_selector"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/comic_regular"
                    android:text="@string/someone_else"
                    android:textColor="@color/checkbox_text_color"  />

                <ImageView
                    android:layout_marginTop="12dp"
                    android:id="@+id/cancelBtn"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_cancel_blue_small" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/titleTv"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comic_regular"
                android:text="@string/title"
                android:textColor="@color/text_color_80"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxLayout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comic_regular"
                android:text="@string/full_name"
                android:textColor="@color/text_color_80"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/nameEt"
                app:layout_constraintTop_toTopOf="@+id/titleTv" />


<!--            <androidx.appcompat.widget.LinearLayoutCompat-->
<!--                android:id="@+id/linearLayoutCompat5"-->
<!--                android:layout_width="@dimen/_84sdp"-->
<!--                android:layout_height="@dimen/_40sdp"-->
<!--                android:layout_marginTop="6dp"-->
<!--                android:background="@drawable/rounded_edit_text_background_selector"-->
<!--                app:layout_constraintStart_toStartOf="@+id/titleTv"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/titleTv" />-->


            <RelativeLayout
                android:layout_marginTop="6dp"
                android:id="@+id/linearLayoutCompat5"
                android:layout_width="@dimen/_90sdp"
                android:background="@drawable/rounded_edit_text_background_selector"
                android:layout_height="@dimen/_36sdp"
                app:layout_constraintStart_toStartOf="@+id/titleTv"
                app:layout_constraintTop_toBottomOf="@+id/titleTv" >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputCategory"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:endIconDrawable="@drawable/toggle_dropdown"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconTint="@color/grey">

                    <AutoCompleteTextView
                        android:id="@+id/titleAutoTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:fontFamily="@font/comic_regular"
                        android:inputType="none"
                        android:background="@color/transparent"
                        android:padding="@dimen/_6sdp"
                        android:text="@string/title"
                        android:textColor="@color/text_color_50"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>




            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/nameEt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_36sdp"
                android:background="@drawable/rounded_edit_text_background_selector"
                android:drawableStart="@drawable/ic_name"
                android:drawablePadding="@dimen/_2sdp"
                android:hint="@string/full_name"
                android:inputType="textCapWords"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/text_color"
                android:layout_marginEnd="10dp"
                android:textColorHint="@color/text_hint_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayoutCompat5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat5"
                app:layout_constraintTop_toTopOf="@+id/linearLayoutCompat5"
                android:layout_marginStart="10dp"/>



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/linearLayoutCompat5"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat5">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comic_regular"
                        android:text="@string/contact_number"
                        android:textColor="@color/text_color_80"
                        android:textSize="12sp" />


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/contactLayout"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:background="@drawable/rounded_edit_text_background_normal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp">

                            <com.hbb20.CountryCodePicker
                                android:id="@+id/countryCodePicker"
                                android:layout_width="57dp"
                                android:layout_height="36dp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_vertical"
                                app:ccpDialog_backgroundColor="@color/msg_background"
                                app:ccpDialog_cornerRadius="@dimen/_12sdp"
                                app:ccpDialog_textColor="@color/text_color_60"
                                app:ccp_contentColor="@color/text_color"
                                app:ccp_defaultNameCode="IN"
                                app:ccp_showFlag="true"
                                app:ccpDialog_background="@color/dialog_background"
                                app:ccp_showFullName="false"
                                app:ccp_showNameCode="false"
                                app:ccp_showPhoneCode="false"
                                app:ccp_textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/countryFlagImageView"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:elevation="4dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/india_flag"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.20"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/contactEt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:hint="@string/contact_number_small"
                            android:paddingStart="1dp"
                            android:paddingEnd="10dp"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView3" />


                    </androidx.appcompat.widget.LinearLayoutCompat>



                </androidx.appcompat.widget.LinearLayoutCompat>



                <View
                    android:layout_width="10dp"
                    android:layout_height="5dp"/>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comic_regular"
                        android:text="@string/email"
                        android:textColor="@color/text_color_80"
                        android:textSize="12sp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/emailEt"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:background="@drawable/rounded_edit_text_background_selector"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="@dimen/_2sdp"
                        android:hint="@string/enter_your_email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="12sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>











        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>