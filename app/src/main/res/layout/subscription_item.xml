<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:elevation="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:backgroundTint="@color/et_background"
        app:strokeColor="@color/subscription_stroke"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/et_background"
            android:scrollbars="none">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_subscription"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_standard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard"
                    android:textColor="@color/round_btn_background"
                    android:textSize="17sp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/comic_bold"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_subscription"
                    app:layout_constraintStart_toEndOf="@id/iv_subscription"
                    app:layout_constraintTop_toTopOf="@+id/iv_subscription" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹500"
                    android:textColor="@color/round_btn_background"
                    android:textSize="21sp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/comic_bold"
                    app:layout_constraintEnd_toStartOf="@id/tv_duration"
                    app:layout_constraintTop_toTopOf="@+id/iv_subscription" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic_bold"
                    android:text="/6M"
                    android:textColor="@color/round_btn_background"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_amount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_amount" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/descriptionTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/comic_regular"
                    android:justificationMode="inter_word"
                    android:text="The Premium Plan is aimed at users who want an enhanced experience with additional features and no advertisements. This plan is ideal for frequent travelers and those who want to make the most of the app's capabilities."
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_duration"
                    app:layout_constraintStart_toStartOf="@+id/iv_subscription"
                    app:layout_constraintTop_toBottomOf="@id/titleTv" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_plans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/comic_bold"
                    android:text="What's Included:"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/descriptionTv"
                    app:layout_constraintTop_toBottomOf="@+id/descriptionTv" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/includeRv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/descriptionTv"
                    app:layout_constraintStart_toStartOf="@+id/tv_plans"
                    app:layout_constraintTop_toBottomOf="@+id/tv_plans"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/include_items"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </com.google.android.material.card.MaterialCardView>

</layout>