<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/post_background"
            app:cardCornerRadius="14dp"
            app:strokeColor="@color/transparent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <View
                android:id="@+id/view1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/background_profile"/>
            <View
                android:layout_marginTop="-16dp"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/bottom_rounded_corners_black"/>




                <LinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBaseline_toBottomOf="parent"
                    android:padding="5dp"
                    android:id="@+id/postLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/userLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/userProfileIv"
                            android:layout_margin="3.6dp"
                            android:layout_width="@dimen/_36sdp"
                            android:layout_height="@dimen/_36sdp"
                            android:background="@color/grey"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:id="@+id/userNameTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:layout_marginEnd="@dimen/_26sdp"
                                    android:textColor="@color/text_color"
                                    android:fontFamily="@font/comic_regular"
                                    android:text="Grand Imperial"/>
                                
                                <!-- New Post Badge next to name -->
                                <TextView
                                    android:id="@+id/newPostBadge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:text="NEW"
                                    android:textSize="9sp"
                                    android:textColor="@color/blue"
                                    android:fontFamily="@font/comic_regular"
                                    android:background="@drawable/rounded_blue_50_background"
                                    android:paddingStart="6dp"
                                    android:paddingEnd="6dp"
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp"
                                    android:visibility="gone"
                                    android:elevation="1dp"/>
                            </LinearLayout>





                            <TextView
                                android:id="@+id/daysTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="@color/text_color_40"
                                android:fontFamily="@font/comic_regular"
                                android:text="-- days"/>



                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--                    <com.google.android.material.imageview.ShapeableImageView-->

                        <!--                        android:layout_width="match_parent"-->
                        <!--                        android:layout_height="@dimen/_200sdp"-->
                        <!--                        android:background="@color/grey"-->
                        <!--                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize6Percent"/>-->


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_280sdp"
                            app:cardCornerRadius="14dp"
                            app:strokeColor="@color/transparent"
                            android:background="@color/transparent"
                            app:cardBackgroundColor="@color/transparent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:background="@color/grey"
                                    android:src="@drawable/onboard_pic_one"
                                    android:scaleType="fitXY"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <eightbitlab.com.blurview.BlurView
                                    android:id="@+id/topBlurView"
                                    android:layout_width="0dp"
                                    android:background="@color/blurred_background"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" >

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/businessLayout"
                                        android:layout_margin="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.google.android.material.card.MaterialCardView
                                            android:id="@+id/hotelCv"
                                            android:layout_width="@dimen/_40sdp"
                                            android:layout_height="@dimen/_40sdp"
                                            android:layout_gravity="center"
                                            app:cardBackgroundColor="@color/transparent"
                                            app:cardCornerRadius="@dimen/_50sdp"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:strokeColor="@color/post_stroke"
                                            app:strokeWidth="1.6dp">


                                            <com.google.android.material.imageview.ShapeableImageView
                                                android:id="@+id/hotelProfileIv"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_margin="3.6dp"
                                                android:background="@color/grey"
                                                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                                        </com.google.android.material.card.MaterialCardView>

                                        <TextView
                                            android:id="@+id/hotelNameTv"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="8dp"
                                            android:fontFamily="@font/comic_regular"
                                            android:text="Grand Imperial"
                                            android:textColor="@color/text_color"
                                            android:textSize="16sp"
                                            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toEndOf="@+id/hotelCv"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintVertical_chainStyle="packed" />

                                        <LinearLayout
                                            android:id="@+id/linearLayout2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                                            app:layout_constraintStart_toStartOf="@+id/hotelNameTv"
                                            app:layout_constraintTop_toBottomOf="@+id/hotelNameTv">

                                            <TextView
                                                android:id="@+id/hotelTypeTv"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/comic_regular"
                                                android:singleLine="true"
                                                android:ellipsize="end"
                                                android:maxWidth="@dimen/_180sdp"
                                                android:text="(Marriage Banquets -Traditional Banquet)"
                                                android:textColor="@color/text_color_40"
                                                android:textSize="11sp" />

                                            <TextView
                                                android:id="@+id/averageRatingTv"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/comic_regular"
                                                android:text="( 3 star)"
                                                android:textColor="@color/text_color_40"
                                                android:textSize="11sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/linearLayout3"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                                            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                                            <TextView
                                                android:id="@+id/location"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/comic_regular"
                                                android:text="Zirkpur"
                                                android:textColor="@color/text_color_40"
                                                android:textSize="11sp" />

                                        </LinearLayout>

                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </eightbitlab.com.blurview.BlurView>

                                <eightbitlab.com.blurview.BlurView
                                    android:id="@+id/bottomBlurView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:background="@color/blurred_background"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent">


                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="8dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:id="@+id/ratingTV"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/comic_regular"
                                            android:text="Average Stars"
                                            android:textColor="@color/yellow"
                                            android:textSize="24sp" />

                                        <TextView
                                            android:layout_gravity="center"
                                            android:id="@+id/ratingTypeTV"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="8dp"
                                            android:fontFamily="@font/comic_regular"
                                            android:text="Average"
                                            android:textColor="@color/yellow"
                                            android:textSize="20sp" />


                                    </androidx.appcompat.widget.LinearLayoutCompat>




                                </eightbitlab.com.blurview.BlurView>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>




                    </androidx.appcompat.widget.LinearLayoutCompat>




                    <TextView
                        android:textIsSelectable="true"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:id="@+id/contentTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/comic_regular"
                        android:text="The service was outstanding, the decor was so lush and elegant. I have had dozens of family members call and compliment on how professional was the management and staff. I would recommend Grand Imperial in a heartbeat!!!"
                        android:clickable="true"
                        android:focusable="false"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_color_40"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_6sdp"/>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/likeBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/background_with_blue_stroke"
                            android:orientation="horizontal"
                            android:padding="@dimen/_4sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_marginStart="@dimen/_2sdp"
                                android:id="@+id/likeIv"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_unlike_icon" />

                            <TextView
                                android:id="@+id/likeTv"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/comic_regular"
                                android:text="--"
                                android:textAlignment="center"
                                android:textColor="@color/text_color"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginStart="@dimen/_8sdp"
                            android:id="@+id/commentBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/background_with_blue_stroke"
                            android:orientation="horizontal"
                            android:padding="@dimen/_4sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/likeBtn"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_marginStart="@dimen/_2sdp"
                                android:id="@+id/commentIv"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_comment_icon" />

                            <TextView
                                android:id="@+id/commentTv"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/comic_regular"
                                android:text="--"
                                android:textAlignment="center"
                                android:textColor="@color/text_color"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginStart="@dimen/_8sdp"
                            android:id="@+id/shareBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/background_with_blue_stroke"
                            android:orientation="horizontal"
                            android:padding="@dimen/_4sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/commentBtn"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_marginStart="@dimen/_2sdp"
                                android:id="@+id/shareIv"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_share_icon" />

                            <TextView
                                android:id="@+id/shareTv"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/comic_regular"
                                android:text="--"
                                android:textAlignment="center"
                                android:textColor="@color/text_color"
                                android:textSize="12sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:id="@+id/viewsBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/background_with_blue_stroke"
                            android:orientation="horizontal"
                            android:padding="@dimen/_4sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/shareBtn"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_marginStart="@dimen/_2sdp"
                                android:id="@+id/viewsIv"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_views" />

                            <TextView
                                android:id="@+id/viewsTv"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/comic_regular"
                                android:text="--"
                                android:textAlignment="center"
                                android:textColor="@color/text_color"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/saveIv"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_unsave_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />



                    </androidx.constraintlayout.widget.ConstraintLayout>






                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>




            <ImageView
                android:id="@+id/menuBtn"
                android:layout_margin="7dp"
                android:layout_gravity="end"
                app:strokeColor="@color/transparent"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_post_menu"
                android:clickable="true"
                android:focusable="true"/>

        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>