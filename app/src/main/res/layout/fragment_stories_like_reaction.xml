<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bottom_sheet_background_large"
        tools:context=".bottomSheets.StoriesLikeReactionFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/viewerLayout"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/viewerIv"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@color/blue_40"
                        android:padding="0.5dp"
                        android:src="@drawable/ic_viewer_icon"
                        app:contentPadding="@dimen/_6sdp"
                        app:layout_constraintBottom_toTopOf="@+id/viewerView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                        app:strokeColor="@color/blue_50"
                        app:strokeWidth="1dp" />

                    <View
                        android:layout_marginTop="@dimen/_2sdp"
                        android:id="@+id/viewerView"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:background="@color/blue_50"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/viewerIv"
                        app:layout_constraintStart_toStartOf="@+id/viewerIv"
                        app:layout_constraintTop_toBottomOf="@+id/viewerIv" />


                    <TextView
                        android:layout_marginStart="@dimen/_4sdp"
                        android:id="@+id/viewerCountTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="10"
                        android:fontFamily="@font/comic_regular"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/viewerIv"
                        app:layout_constraintStart_toEndOf="@+id/viewerIv"
                        app:layout_constraintTop_toTopOf="@+id/viewerIv"
                        app:layout_constraintVertical_bias="0.484" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/likedLayout"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/likeIv"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@color/blue_40"
                        android:src="@drawable/ic_like_icon"
                        app:contentPadding="@dimen/_6sdp"
                        android:padding="0.5dp"
                        app:layout_constraintBottom_toTopOf="@+id/likeView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                        app:strokeColor="@color/blue_50"
                        app:strokeWidth="1dp" />

                    <View
                        android:layout_marginTop="@dimen/_2sdp"
                        android:id="@+id/likeView"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:background="@color/blue_50"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/likeIv"
                        app:layout_constraintStart_toStartOf="@+id/likeIv"
                        app:layout_constraintTop_toBottomOf="@+id/likeIv" />


                    <TextView
                        android:layout_marginStart="@dimen/_4sdp"
                        android:id="@+id/likeCountTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="10"
                        android:fontFamily="@font/comic_regular"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/likeIv"
                        app:layout_constraintStart_toEndOf="@+id/likeIv"
                        app:layout_constraintTop_toTopOf="@+id/likeIv"
                        app:layout_constraintVertical_bias="0.484" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp" />



        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>
</layout>