<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/post_background"
            app:cardCornerRadius="18dp"
            app:strokeColor="@color/transparent">

            <LinearLayout
                android:layout_margin="2dp"
                android:padding="5dp"
                android:id="@+id/chatLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_profile"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/profileCardView"
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        app:cardCornerRadius="@dimen/_50sdp"
                        android:layout_margin="3.6dp"
                        app:strokeWidth="1.6dp"
                        app:strokeColor="@color/post_stroke"
                        app:cardBackgroundColor="@color/background_color">


                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profileIv"
                            android:layout_margin="3.6dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginEnd="@dimen/_26sdp">
                            <TextView
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_gravity="center_vertical"
                                android:maxWidth="@dimen/_180sdp"
                                android:id="@+id/nameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/comic_regular"
                                android:text="Grand Imperial"/>
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/verifyIcon"
                                android:padding="3dp"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:src="@drawable/ic_verify_icon"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>



                        <LinearLayout
                            android:id="@+id/typeLayout"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_business_type_background_normal">

                            <ImageView
                                android:id="@+id/businessTypeIcon"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/ic_hotel"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:layout_gravity="center"
                                android:id="@+id/businessTypeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8sp"
                                android:textColor="@color/text_color_60"
                                android:fontFamily="@font/comic_regular"
                                android:text="Marriage Banquets"/>


                        </LinearLayout>

                            <TextView
                                android:layout_marginTop="4dp"
                                android:id="@+id/locationTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/text_color_40"
                                android:fontFamily="@font/comic_regular"
                                android:text="Landran, Kharar - Landran Rd, Sector 116, Sahibzada Ajit Singh Nagar, Punjab 140308"/>


                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>


            </LinearLayout>

            <ImageView
                android:id="@+id/menuBtn"
                android:layout_margin="5dp"
                android:layout_gravity="end"
                app:strokeColor="@color/transparent"
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_21sdp"
                android:src="@drawable/ic_post_menu"/>


        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>