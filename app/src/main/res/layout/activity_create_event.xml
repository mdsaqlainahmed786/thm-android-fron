<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        tools:context=".activity.userTypes.forms.createEvent.CreateEventActivity">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backBtn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"/>

            <TextView
                android:id="@+id/titleTv"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/create_event"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:fontFamily="@font/comic_bold"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/doneBtn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_blue_tick_icon"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_14"
                    android:padding="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/hotelCv"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="@dimen/_50sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="@color/post_stroke"
                        app:strokeWidth="1.6dp">


                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profileIv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@color/grey"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                    </com.google.android.material.card.MaterialCardView>

<!--                    <com.google.android.material.imageview.ShapeableImageView-->
<!--                        android:id="@+id/userPicIv"-->
<!--                        android:layout_width="@dimen/_40sdp"-->
<!--                        android:layout_height="@dimen/_40sdp"-->
<!--                        android:background="@color/grey"-->
<!--                        app:layout_constraintBottom_toBottomOf="parent"-->
<!--                        app:layout_constraintStart_toStartOf="parent"-->
<!--                        app:layout_constraintTop_toTopOf="parent"-->
<!--                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />-->

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/hotelCv"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:id="@+id/fullNameTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comic_regular"
                            android:text="Arvind Kumar Singh"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/addressTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comic_regular"
                            android:text="Landran, Kharar - Landran Rd, Sector 116, Sahibzada Ajit Singh Nagar, Punjab 140308"
                            android:textColor="@color/text_color_60"
                            android:textSize="11sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>



                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_14"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <RelativeLayout
                        android:id="@+id/businessLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_44sdp"
                                android:layout_height="@dimen/_44sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_gallary_large" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/coverImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

                    </RelativeLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>





                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comic_regular"
                        android:text="@string/event_name"
                        android:textColor="@color/text_color_60"
                        android:textSize="14sp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/eventNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:ellipsize="end"
                        android:layout_marginEnd="12dp"
                        android:singleLine="true"
                        android:background="@drawable/rounded_edit_text_background_selector"
                        android:drawableStart="@drawable/ic_event_name_icon"
                        android:drawablePadding="@dimen/_6sdp"
                        android:hint="@string/enter_event_name"
                        android:inputType="textCapCharacters"
                        android:paddingStart="12dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp" />




                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comic_regular"
                                android:text="@string/start_date"
                                android:textColor="@color/text_color_60"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/startDateBtn"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/rounded_edit_text_background_selector"
                                android:drawablePadding="@dimen/_6sdp"
                                android:drawableStart="@drawable/ic_date_icon"
                                android:paddingStart="12dp"
                                android:hint="@string/start_date"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/text_hint_color"
                                android:textSize="14sp"
                                android:gravity="center_vertical|start" />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <View
                            android:layout_width="10dp"
                            android:layout_height="12dp"/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comic_regular"
                                android:text="@string/start_time"
                                android:textColor="@color/text_color_60"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/startTimeBtn"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/rounded_edit_text_background_selector"
                                android:drawablePadding="@dimen/_6sdp"
                                android:drawableStart="@drawable/ic_time_icon"
                                android:paddingStart="12dp"
                                android:hint="@string/start_time"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/text_hint_color"
                                android:textSize="14sp"
                                android:gravity="center_vertical|start" />


                        </androidx.appcompat.widget.LinearLayoutCompat>



                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comic_regular"
                                android:text="@string/end_date"
                                android:textColor="@color/text_color_60"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/endDateBtn"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/rounded_edit_text_background_selector"
                                android:drawablePadding="@dimen/_6sdp"
                                android:drawableStart="@drawable/ic_date_icon"
                                android:paddingStart="12dp"
                                android:hint="@string/end_date"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/text_hint_color"
                                android:textSize="14sp"
                                android:gravity="center_vertical|start" />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <View
                            android:layout_width="10dp"
                            android:layout_height="12dp"/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comic_regular"
                                android:text="@string/end_time"
                                android:textColor="@color/text_color_60"
                                android:textSize="14sp"/>
                            <TextView
                                android:id="@+id/endTimeBtn"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/rounded_edit_text_background_selector"
                                android:drawablePadding="@dimen/_6sdp"
                                android:drawableStart="@drawable/ic_time_icon"
                                android:paddingStart="12dp"
                                android:hint="@string/end_time"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/text_hint_color"
                                android:textSize="14sp"
                                android:gravity="center_vertical|start" />


                        </androidx.appcompat.widget.LinearLayoutCompat>



                    </androidx.appcompat.widget.LinearLayoutCompat>



                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comic_regular"
                        android:text="@string/event_format"
                        android:textColor="@color/text_color_60"
                        android:textSize="14sp"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/onlineBtn"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/rounded_edit_text_background_normal"
                            android:drawablePadding="@dimen/_2sdp"
                            android:hint="@string/online"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp"
                            android:gravity="center_vertical|center" />
                        <View
                            android:layout_width="10dp"
                            android:layout_height="12dp"/>
                        <TextView
                            android:id="@+id/offlineBtn"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/rounded_edit_text_background_normal"
                            android:drawablePadding="@dimen/_2sdp"
                            android:hint="@string/offline"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp"
                            android:gravity="center_vertical|center" />
                    </androidx.appcompat.widget.LinearLayoutCompat>



                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/streamLinkTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comic_regular"
                            android:text="@string/add_streaming_link"
                            android:textColor="@color/text_color_60"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_marginStart="@dimen/_4sdp"
                            android:id="@+id/optionalTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comic_regular"
                            android:text="@string/optional"
                            android:textColor="@color/text_color_40"
                            android:textSize="14sp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/streamLinkEt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/rounded_edit_text_background_selector"
                            android:drawableStart="@drawable/ic_stream_icon"
                            android:drawablePadding="@dimen/_6sdp"
                            android:hint="@string/add_streaming_link"
                            android:inputType="textUri"
                            android:paddingStart="12dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/venueTv"
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comic_regular"
                            android:text="@string/event_venue"
                            android:textColor="@color/text_color_60"
                            android:textSize="14sp"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/venueEt"
                            android:focusable="false"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/rounded_edit_text_background_selector"
                            android:drawableStart="@drawable/ic_venue_icon"
                            android:drawablePadding="@dimen/_6sdp"
                            android:hint="@string/event_venue"
                            android:inputType="textCapWords"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_hint_color"
                            android:textSize="14sp" />




                    <TextView
                        android:id="@+id/descriptionTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/comic_regular"
                        android:text="@string/description"
                        android:textColor="@color/text_color_60"
                        android:textSize="14sp"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/descriptionEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/rounded_edit_text_background_selector"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLines="10"
                        android:gravity="top|start"
                        android:scrollbars="vertical"
                        android:drawablePadding="@dimen/_2sdp"
                        android:hint="@string/description"
                        android:padding="12dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_hint_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />




                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>