<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        tools:context=".activity.userTypes.forms.createStory.LocationSelectionActivity">

        <!-- Google Maps Fragment in Background -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_250sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <!-- Navigation Bar -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/navBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/comic_bold"
                android:text="Locations"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/searchBtn"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center"
                app:contentPadding="@dimen/_5sdp"
                android:src="@drawable/ic_search_dot_icon"
                android:background="@color/blue"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Bottom Sheet with Places List and Action Buttons -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:elevation="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_270sdp"
            android:background="@drawable/rounded_top_corners"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggested Nearby Places"
                android:textColor="@color/text_color"
                android:fontFamily="@font/comic_regular"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/placesRv"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:listitem="@layout/sugested_place_item_layout"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <!-- Action Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addLocationBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/comic_bold"
                android:text="Add location"
                android:textSize="16sp"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:padding="16dp"
                app:cornerRadius="12dp" />

            <TextView
                android:id="@+id/previewOnMapBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/comic_regular"
                android:text="Preview on map"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:padding="8dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
