<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_top_corners"
        tools:context=".activity.booking.bottomSheet.GuestAndRoomBottomSheet">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_margin="12dp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/blue_50"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guest_and_room"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/comic_regular"
                android:textColor="@color/text_color"/>


            <View
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/text_color_25"
                android:layout_gravity="center"/>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_edit_text_background_selector">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_6sdp"
                    android:drawableStart="@drawable/ic_guest_icon"
                    android:paddingStart="12dp"
                    android:hint="@string/guest"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:gravity="center_vertical|start" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginEnd="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/guestDecBtn"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/ic_minus_white"
                        app:contentPadding="6dp"
                        android:layout_gravity="center"
                        android:background="@color/blue"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>


                    <TextView
                        android:id="@+id/guestNumberTv"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:text="0"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/comic_regular"
                        android:textSize="14sp"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/guestAddBtn"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/ic_add_white"
                        app:contentPadding="6dp"
                        android:layout_gravity="center"
                        android:background="@color/blue"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/rounded_edit_text_background_selector">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_6sdp"
                    android:drawableStart="@drawable/ic_children_icon"
                    android:paddingStart="12dp"
                    android:hint="@string/children"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:gravity="center_vertical|start" />



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginEnd="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/childrenDecBtn"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/ic_minus_white"
                        app:contentPadding="6dp"
                        android:layout_gravity="center"
                        android:background="@color/blue"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>


                    <TextView
                        android:id="@+id/childrenNumberTv"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:text="0"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/comic_regular"
                        android:textSize="14sp"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/childrenAddBtn"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/ic_add_white"
                        app:contentPadding="6dp"
                        android:layout_gravity="center"
                        android:background="@color/blue"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/rounded_edit_text_background_selector">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_6sdp"
                    android:drawableStart="@drawable/ic_pets_icon"
                    android:paddingStart="12dp"
                    android:hint="@string/traveling_with_pet"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:gravity="center_vertical|start" />

                <ImageView
                    android:id="@+id/petCheckBox"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_round_unselected_checkbox"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <TextView
                android:elevation="5dp"
                android:id="@+id/applyBtn"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:background="@drawable/blue_btn_background_background"
                android:drawablePadding="@dimen/_6sdp"
                android:text="@string/proceed"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:gravity="center" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>
</layout>